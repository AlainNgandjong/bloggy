{% extends 'base.html.twig' %}

{% block title %}Home page -  {{ parent() }}{% endblock %}

{% block body %}

    <div class="main">
        <div class="example-wrapper">
            <h1>Show page</h1>

                <article>
                    <h1>{{ post.title }}</h1>
                    <span>Published <time datetime="{{ post.publishedAt|date('d-m-Y H:m:s') }}"></time> {{ post.publishedAt|date }} by {{ post.author }}</span>
                    <p>{{ post.body|nl2br }}</p>
                </article>


        </div>
    </div>

{% endblock %}
